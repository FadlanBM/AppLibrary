<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/asdasjd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llProducTittle"
        android:layout_below="@id/book_image"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Product Title"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <!-- Ikon Love -->
            <ImageView
                android:id="@+id/icon_love"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/love"
                android:layout_marginEnd="@dimen/_10sdp"
               />

        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llProducTittle"
        android:id="@+id/CategoryListRv"
        tools:listitem="@layout/list_category"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CategoryListRv"
        android:paddingStart="16dp"
        android:layout_marginTop="@dimen/_7sdp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Rp 100.000"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/add_to_cart_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Tambah ke Keranjang"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/product_description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_to_cart_button"
        android:padding="16dp"
        android:text="Deskripsi Buku"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_description_title"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="Deskripsi Produk yang sangat panjang dan detail. Deskripsi ini berisi informasi penting tentang produk yang ingin Anda beli."
        android:textColor="@android:color/black"
        android:textSize="16sp" />
</RelativeLayout>
